    name = "setup_simple",
    deps = [
        ":base",
        ":bytestring",
        ":containers",
        ":filepath",
        ":Cabal",
    ],
    srcs = {
        "Main.hs": "setup_simple.hs",
    },
    # _haskell_toolchain = "toolchains//ghc-9.10.1:haskell",
    visibility = ["PUBLIC"],
)

