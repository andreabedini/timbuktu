load("//rules/haskell:toolchain.bzl", "haskell_toolchain_library")

export_file(
    name = "setup_simple.hs",
    visibility = ["PUBLIC"],
)

[
    haskell_toolchain_library(name = name)
    for name in ["base", "bytestring", "containers", "filepath", "Cabal"]
]

